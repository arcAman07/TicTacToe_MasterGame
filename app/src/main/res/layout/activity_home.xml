<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="296dp"
        android:layout_height="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="62dp"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/engineButton"
        android:layout_width="190dp"
        android:layout_height="61dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="97dp"
        android:onClick="againstEngine"
        android:text="Against Engine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/humanButton"
        android:layout_width="190dp"
        android:layout_height="61dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="244dp"
        android:onClick="againstHuman"
        android:text="Against Human"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/customButton"
        android:layout_width="190dp"
        android:layout_height="61dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="396dp"
        android:onClick="customMode"
        android:text="Custom Mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>